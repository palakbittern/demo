
<h1>Listing Articles</h1>


<%= link_to 'New test', new_test_path, class: "btn btn-success" %>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @test.each do |test| %>
    <tr>
       <td><%= test.title %></td>
      <td><%= test.text %></td>
      <td><%= link_to 'Show', test_path(test), class: "btn btn-primary"%></td>
      <td><%= link_to 'Edit', edit_test_path(test), class: "btn btn-primary" %></td>
      <td><%= link_to 'Destroy', test_path(test),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>